!display_control_api

%#include <stdbool.h>
%#include <stddef.h>
%#include <stdint.h>
%

# initDisplayControl - initialize the DisplayControl process.
# This function is *NOT* thread safe and should be called first
int initDisplayControl(const char* addr);

# stopDisplayControl - stops the DisplayControl process.
#     This functions is#NOT* thread safe and should be called
#     only if previous initOpenGLRenderer has returned true.
int stopDisplayControl(void);
